.top-bar
  .row
    .large-12.columns

      .top-bar-left
        ul#nav-links.dropdown.menu data-dropdown-menu=''
          li.menu-logo
            <%= image_tag "artoo.png" %>
          li.menu-text.site-title R2-D2

      .top-bar-right
        ul.dropdown.menu data-dropdown-menu=''
          li.divider
          li.has-submenu
            a
              i.fa.fa-bug
              | Report bug
            ul.submenu.menu.vertical data-submenu=''
              li: a#jira-bug-trigger Raise a bug
              li: a#jira-feedback-trigger Provide feedback
          - if @currentUser
            li.divider
            li.has-submenu
              a = @currentUser.name
              ul.submenu.menu.vertical data-submenu=''
                li == @linkTo 'Sign out', Routes.destroy_user_session_path(), { external: true }, { 'data-method': 'delete' }
            li.divider
          - else
            li: .btn == @linkTo 'Sign in', '', {}, { class: 'button small', id: 'sign-in' }
